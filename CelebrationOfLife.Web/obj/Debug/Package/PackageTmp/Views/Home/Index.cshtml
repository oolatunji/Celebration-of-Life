<body>
    <div id="viewport">
        <header>
            <div class="main">
                <div class="clearfix">
                    <nav>
                        <ul>
                            <li><a href="#home" class="on">Home</a></li>
                            <li><a href="#programme">Programme</a></li>
                            <li><a href="#contact">Location</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>

        <div id="controllers">
            <div id="magazine">

                <div class="home">

                    <h1 class="site-title">
                        <a href="#home">
                            Lady Catherine Adanna Pat-Mbano
                        </a>
                        <span class="tagline">
                            CELEBRATION OF LIFE
                        </span>
                    </h1>
                </div>
                <div class="page programme">
                    <div class="inner">

                    </div>
                    <div class="shadow-left">

                    </div>
                </div>
                <div class="page programme-1">
                    <div class="inner">
                        <div class="content">
                            <div class="clearfix">
                                <h2 style="font-weight:bold">Programme List</h2>
                                <div class="divider"></div>

                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <table id="categoryList" class="cell-border" cellspacing="0" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th>Programme</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="divider"></div>
                        </div>
                    </div>
                    <div class="shadow-right">
                    </div>

                </div>

                <div class="page programmedetail">
                    <div class="inner">

                    </div>
                    <div class="shadow-left">

                    </div>
                </div>
                <div class="page programmedetail-1">
                    <div class="inner">
                        <div class="content" style="overflow-y:visible;">
                            <div class="row" style="margin-bottom:10px;">
                                <div class="col-6" style="margin-top:5px;margin-bottom:5px;"><p id="category" style="font-family:Calibri;color:blue;font-size:14px;"></p></div>
                                <div class="col-5" style="float:right">
                                    <button type="button" class="btn btn-outline btn-primary" onclick="backToList()"><i class="fa fa-angle-double-left"></i> Back to List</button>
                                    <button type="button" id="showGallery" class="btn btn-outline btn-primary" data-toggle="modal" data-target="#modalHeaderLightBlue"><i class="fa fa-video-camera"></i> Show Gallery</button>
                                </div>
                            </div>
                            <div style="height:530px; overflow-y:auto">
                                <div class="clearfix" id="content"></div>
                                <div class="clearfix" id="image_placeholder" style="display:flex;flex-direction: row;flex-wrap: wrap;justify-content: center;align-items: center;"></div>
                                <div class="divider"></div>
                            </div>
                        </div>
                    </div>
                    <div class="shadow-right">
                    </div>
                </div>
                <div class="contact">
                    <div class="inner">

                    </div>
                    <div class="shadow-left">

                    </div>
                </div>

                <div class="contact-1">
                    <div class="inner">
                        <div class="content">
                            <h2 style="font-family:Calibri;font-weight:bold;color:navy;font-size:28px;">Burial Location</h2>
                            <hr/>
                            <div class="clearfix">
                                <div class="clearfix top25">
                                    <div class="col-7">
                                        <div class="top20" style="line-height:2.5em;font-weight:bold;color:black;font-size:16px">
                                            Umuche, Amaukwu-Obollo<br />
                                            Isiala Mbano.<br>
                                            Local Government Area,<br>
                                            Imo State.
                                        </div>
                                        <hr />
                                        <div class="top25">
                                            <h2 style="font-family:Calibri;font-weight:bold;color:navy;font-size:28px;">Date </h2>
                                            <hr />
                                            <span style="line-height:2.5em;font-weight:bold;color:black;font-size:16px">7th, January 2016</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="shadow-right">
                    </div>
                </div>

                <div class="back">
                    <h1 class="site-title">
                        <a href="#home">
                            Lady Catherine Adanna Pat-Mbano
                        </a>
                        <span class="tagline">
                            CELEBRATION OF LIFE
                        </span>
                    </h1>
                </div>

            </div>
        </div>

        <footer>
            <div class="main">
                <div class="aligncenter">
                    &copy; Copyright 2015
                </div>
            </div>
        </footer>
    </div>
    <div class="modal fade" id="modalHeaderLightBlue" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-header-light-red">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="categoryTitle"></h4>
                </div>
                <div class="flexslider-container modal-body text-center">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
<div class="someclass">
