@Scripts.Render("~/bundles/changepassword")
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header panel-primary" style="color:navy">Password Management</h1>
    </div>
</div>
<div class="row" ng-app="changepasswordapp">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Change Password
            </div>
            <div class="panel-body" ng-controller="changePasswordController">
                <div class="form-group">
                    <input class="form-control" placeholder="Enter New Password" type="password" ng-model="newpassword" />
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Confirm New Password" type="password" ng-model="confirmnewpassword" />
                </div>
                <button type="button" class="btn btn-outline btn-primary" ng-disabled="disableButton" ng-click="save()">Change</button>
            </div>
        </div>
    </div>
</div>
