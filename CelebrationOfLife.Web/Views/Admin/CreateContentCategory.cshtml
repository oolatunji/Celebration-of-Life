@Scripts.Render("~/bundles/createcontentcategory")
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header panel-primary" style="color:navy">Category Management</h1>
    </div>
</div>
<div class="row" ng-app="mainApp">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Add Category
            </div>
            <div class="panel-body" ng-controller="categoryController">
                <div class="form-group">
                    <input class="form-control" placeholder="Enter Category Name" ng-model="category.Name" />
                </div>
                <div class="form-group">
                    <select class="form-control" ng-options="ct.name for ct in categorytype" ng-model="selectedCategory">
                        <option value="" selected="selected">Select Category Type</option>
                    </select>
                </div>
                <button type="button" class="btn btn-outline btn-primary" ng-click="save()"><i class="fa fa-plus-circle"></i> Add</button>
                <button type="button" class="btn btn-outline btn-default" ng-click="reset()"><i class="fa fa-times"></i> Clear</button>
            </div>
        </div>
    </div>
</div>
