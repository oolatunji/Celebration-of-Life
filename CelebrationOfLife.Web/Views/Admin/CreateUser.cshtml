@Scripts.Render("~/bundles/adduser")
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header panel-primary" style="color:navy">User Management</h1>
    </div>
</div>
<div class="row" ng-app="mainApp">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Add User
            </div>
            <div class="panel-body" ng-controller="userController">
                <div class="form-group">
                    <input class="form-control" placeholder="Enter Lastname" ng-model="user.Lastname" />
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Enter Othernames" ng-model="user.Othernames" />
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Enter Email" ng-model="user.Email" />
                </div>
                <div class="form-group">
                    <input class="form-control" placeholder="Enter Username" ng-model="user.Username" />
                </div>
                <button type="button" class="btn btn-outline btn-primary" ng-click="save()"><i class="fa fa-plus-circle"></i> Add</button>
                <button type="button" class="btn btn-outline btn-default" ng-click="reset()"><i class="fa fa-times"></i> Clear</button>
            </div>
        </div>
    </div>
</div>
